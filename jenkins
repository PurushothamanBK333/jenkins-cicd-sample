pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo ' Building the project...'
                echo ' Build successful.'
            }
        }

        stage('Test') {
            steps {
                echo ' Running tests...'
                echo ' All tests passed.'
            }
        }

        stage('Deploy') {
            steps {
                echo ' Deploying the project...'
                echo ' Deployment complete.'
            }
        }
    }
}
